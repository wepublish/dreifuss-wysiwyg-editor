    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "babel-loader": "^8.0.6",
    "css-loader": "^4.2.1",
    "html-webpack-plugin": "^5.3.2",
    "less": "^3.12.2",
    "less-loader": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
