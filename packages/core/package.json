  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "react/display-name": [
        0
      ],
      "react/prop-types": [
        0
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "react/no-find-dom-node": 0,
      "class-methods-use-this": "off",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to",
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    }
  },
  "gitHead": "86b71bff4c9b87a901ef6ed530aa1b5882697797"
}
